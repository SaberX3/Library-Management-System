@model LoginModel

@{
ViewData["Title"] = "Login";
Layout = null;

}

<html>

<head>
    <meta charset="UTF-8">
    <title>Login</title>
    <link href="~/css/Library.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
</head>

<body>
    <div id="loginbackground">
    </div>
    
    <div id="logindiv">
        <div id="logintext">登录</div>
        <div id="loginen">Login</div>
        <form asp-action="Login" method="post">
            <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
            <div class="form-group">

                <img class="icon-user"src="~/images/user.png" />
                <input asp-for="Account" id="addressinput" placeholder="学号/邮箱/手机号" />
            </div>
            <div class="form-group">
                <img class="icon-password" src="~/images/password.png" />
                <input asp-for="Password" id="passwordinput" placeholder="请输入你的密码" />
            </div>
            <div class="form-group" id="dropdown">
                <select asp-for="LoginType">
                    <option disabled value="">登录方式</option>
                    <LoginType login-type="@Enum.GetNames(typeof(LoginType))"></LoginType>
                </select>
            </div>
            <div id="buttongroup">
                <input type="submit" value="登录" class="btn btn-primary" />
                <input type="reset" class="btn btn-primary" />
                <a class="btn btn-success" asp-action="Retrieve" asp-controller="PasswordRetriever">找回密码</a>
            </div>
        </form>
        <div class="text-danger" id="info" asp-validation-summary="All"></div>
    </div>


</body>

</html>
